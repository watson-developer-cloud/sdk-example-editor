{
  "name": "@watson/sdk-example-editor",
  "version": "0.0.2",
  "description": "Web editor to write SDK examples in a swagger extension",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "start": "webpack-dev-server --mode development --open --hot",
    "build": "webpack-cli --mode production",
    "validate": "npm ls",
    "lint": "eslint .",
    "autofix": "eslint . --fix",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "test": "npm run lint",
    "precommit": "lint-staged"
  },
  "author": "IBM Corp",
  "license": "MIT",
  "engines": {
    "node": ">=8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/watson-developer-cloud/sdk-example-editor.git"
  },
  "bugs": {
    "url": "https://github.com/watson-developer-cloud/sdk-example-editor/issues"
  },
  "dependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "carbon-components": "^9.62.1",
    "carbon-components-react": "^6.62.0",
    "carbon-icons": "^7.0.7",
    "css-loader": "^2.0.1",
    "file-saver": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^6.0.0",
    "react-syntax-highlighter": "^10.1.2",
    "redux": "^4.0.1",
    "reselect": "^4.0.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.5",
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run build",
      "npm run autofix",
      "git add"
    ],
    "*.css": [
      "npm run build",
      "npm run autofix",
      "git add"
    ]
  }
}
